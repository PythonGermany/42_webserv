  "version": "0.2.0",
  "configurations": [
    // C++ Debug configuration first running "make debug" and then executing the executable
    {
      "name": "C++ webserv",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/webserv",
      "args": [
        "conf/webserv.conf"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb"
    }
  ]
}